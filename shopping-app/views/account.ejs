<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || "My Account" %></title>

    <link rel="stylesheet" href="/css/checkout.css" />
    <link rel="stylesheet" href="/css/account.css" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('components/navBar') %>

    <main class="account-page">
      <div class="breadcrumb">
        <a href="/homepage">Home</a>
        <span>/</span>
        <span>My Account</span>
      </div>

      <div class="account-layout">
        <!-- LEFT -->
        <aside class="account-sidebar">
          <h3>Manage My Account</h3>
          <ul>
            <li class="<%= activePage === 'profile' ? 'active' : '' %>">
              <a href="/account">My Profile</a>
            </li>
            <li class="<%= activePage === 'address' ? 'active' : '' %>">
              <a href="/account/address">Address Book</a>
            </li>
            <li class="<%= activePage === 'payment' ? 'active' : '' %>">
              <a href="/account/payment">My Payment Options</a>
            </li>
          </ul>

          <hr class="account-divider" />

          <!-- Delete account (workflow) -->
          <form method="POST" action="/account/delete" onsubmit="return confirm('Are you sure you want to delete your account?');">
            <button type="submit" class="btn danger full-width">Delete Account</button>
          </form>
        </aside>

        <!-- RIGHT -->
        <section class="account-content">
          <div class="account-header">
            <h2>Edit Your Profile</h2>
            <p class="welcome">
              Welcome! <span class="name"><%= (user && user.firstName) ? user.firstName : "User" %></span>
            </p>
          </div>

          <!-- Error banner (like your screenshot) -->
          <% if (bannerError) { %>
            <div class="error-banner" role="alert" aria-live="polite">
              <div class="error-icon">!</div>
              <div class="error-text">
                <div class="error-title">There was a problem</div>
                <div class="error-message"><%= bannerError %></div>
              </div>
            </div>
          <% } %>

          <% if (successMsg) { %>
            <div class="success-banner" role="status" aria-live="polite">
              <div class="success-title"><%= successMsg %></div>
            </div>
          <% } %>

          <div class="profile-card">
            <form class="profile-form" method="POST" action="/account/update" novalidate>
              <div class="form-grid">
                <div class="form-group">
                  <label>First Name</label>
                  <input
                    type="text"
                    name="firstName"
                    value="<%= (form && form.firstName) ? form.firstName : (user ? user.firstName : '') %>"
                    class="<%= (fieldErrors && fieldErrors.firstName) ? 'input-error' : '' %>"
                  />
                  <% if (fieldErrors && fieldErrors.firstName) { %>
                    <small class="field-error"><%= fieldErrors.firstName %></small>
                  <% } %>
                </div>

                <div class="form-group">
                  <label>Last Name</label>
                  <input
                    type="text"
                    name="lastName"
                    value="<%= (form && form.lastName) ? form.lastName : (user ? user.lastName : '') %>"
                    class="<%= (fieldErrors && fieldErrors.lastName) ? 'input-error' : '' %>"
                  />
                  <% if (fieldErrors && fieldErrors.lastName) { %>
                    <small class="field-error"><%= fieldErrors.lastName %></small>
                  <% } %>
                </div>

                <div class="form-group full">
                  <label>Email</label>
                  <input
                    type="email"
                    name="email"
                    value="<%= (form && form.email) ? form.email : (user ? user.email : '') %>"
                    class="<%= (fieldErrors && fieldErrors.email) ? 'input-error' : '' %>"
                  />
                  <% if (fieldErrors && fieldErrors.email) { %>
                    <small class="field-error"><%= fieldErrors.email %></small>
                  <% } %>
                </div>

                <div class="form-group full">
                  <label>Address</label>
                  <input
                    type="text"
                    name="address"
                    value="<%= (form && form.address) ? form.address : (user ? user.address : '') %>"
                    class="<%= (fieldErrors && fieldErrors.address) ? 'input-error' : '' %>"
                  />
                  <% if (fieldErrors && fieldErrors.address) { %>
                    <small class="field-error"><%= fieldErrors.address %></small>
                  <% } %>
                </div>
              </div>

              <h4 class="section-title">Password Changes</h4>

              <div class="form-grid">
                <div class="form-group full">
                  <input
                    type="password"
                    name="currentPassword"
                    placeholder="Current Password"
                    class="<%= (fieldErrors && fieldErrors.currentPassword) ? 'input-error' : '' %>"
                  />
                  <% if (fieldErrors && fieldErrors.currentPassword) { %>
                    <small class="field-error"><%= fieldErrors.currentPassword %></small>
                  <% } %>
                </div>

                <div class="form-group full">
                  <input
                    type="password"
                    name="newPassword"
                    placeholder="New Password"
                    class="<%= (fieldErrors && fieldErrors.newPassword) ? 'input-error' : '' %>"
                  />
                  <% if (fieldErrors && fieldErrors.newPassword) { %>
                    <small class="field-error"><%= fieldErrors.newPassword %></small>
                  <% } %>
                </div>

                <div class="form-group full">
                  <input
                    type="password"
                    name="confirmNewPassword"
                    placeholder="Confirm New Password"
                    class="<%= (fieldErrors && fieldErrors.confirmNewPassword) ? 'input-error' : '' %>"
                  />
                  <% if (fieldErrors && fieldErrors.confirmNewPassword) { %>
                    <small class="field-error"><%= fieldErrors.confirmNewPassword %></small>
                  <% } %>
                </div>
              </div>

              <div class="form-actions">
                <a href="/account" class="btn cancel">Cancel</a>
                <button type="submit" class="btn save">Save Changes</button>
              </div>
            </form>
          </div>
        </section>
      </div>
    </main>

    <%- include('components/footer') %>
  </body>
</html>
